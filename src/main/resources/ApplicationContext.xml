<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
>

    <bean id="t1000" class="impls.robot.ModelT1000"
          p:hand-ref="sonyHand"
          p:leg-ref="toshibaLeg"
          p:head-ref="toshibaHead" scope="prototype"
    >

        <constructor-arg value="silver" index="0" type="java.lang.String"/>
        <constructor-arg value="2006" index="1" type="int"/>
        <constructor-arg value="true" index="2" type="boolean"/>

    </bean>

    <bean id="t1000Empty" class="impls.robot.ModelT1000">

        <constructor-arg ref="sonyHand" index="0"/>
        <constructor-arg ref="sonyLeg" index="1"/>
        <constructor-arg ref="toshibaHead" index="2"/>

    </bean>

    <bean id="t1000Full" class="impls.robot.ModelT1000">

        <constructor-arg ref="sonyHand" index="0"/>
        <constructor-arg ref="toshibaHead" index="1"/>
        <constructor-arg ref="sonyLeg" index="2"/>
        <constructor-arg value="silver" index="3" type="java.lang.String"/>
        <constructor-arg value="2006" index="4" type="int"/>
        <constructor-arg value="true" index="5" type="boolean"/>

    </bean>

    <bean id="sonyHand" class="impls.sony.SonyHand"/>
    <bean id="sonyHead" class="impls.sony.SonyHead"/>
    <bean id="sonyLeg" class="impls.sony.SonyLeg"/>

    <bean id="toshibaHand" class="impls.toshiba.ToshibaHand"/>
    <bean id="toshibaHead" class="impls.toshiba.ToshibaHead"/>
    <bean id="toshibaLeg" class="impls.toshiba.ToshibaLeg"/>

</beans>